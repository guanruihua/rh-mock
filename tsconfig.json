{
  "compilerOptions": {
    "target": "ESNext",
    // "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // "strict": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@random/*": [
        "random/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "*.ts"
  ],
  "exclude": [
    "./src/test",
    "*.spec.ts"
  ]
}